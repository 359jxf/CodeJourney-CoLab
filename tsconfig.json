{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@codemirror/state": ["./node_modules/@codemirror/state"]
    },
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["axios", "node"],
  },
  "include": ["src/**/*"]
}
